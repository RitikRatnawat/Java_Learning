<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>

<?import javafx.scene.layout.GridPane?>
<DialogPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.challenge.javafxchallenge.DialogController">
    <content>
        <GridPane hgap = "10" vgap = "10">
            <Label text = "First Name : " GridPane.rowIndex = "0" GridPane.columnIndex = "0"/>
            <TextField fx:id = "fntf" GridPane.rowIndex = "0" GridPane.columnIndex = "1"/>

            <Label text = "Last Name : " GridPane.rowIndex = "1" GridPane.columnIndex = "0"/>
            <TextField fx:id = "lntf" GridPane.rowIndex = "1" GridPane.columnIndex = "1"/>

            <Label text = "Phone number : " GridPane.rowIndex = "2" GridPane.columnIndex = "0"/>
            <TextField fx:id = "pntf" GridPane.rowIndex = "2" GridPane.columnIndex = "1"/>

            <Label text = "Notes : " GridPane.rowIndex = "3" GridPane.columnIndex = "0"/>
            <TextField fx:id = "nttf" GridPane.rowIndex = "3" GridPane.columnIndex = "1"/>
        </GridPane>
    </content>

</DialogPane>
